@model RegistrationRequestDto

<form method="post">
    <div class="container border border-3 p-4 mt-4">
        <div class="row text-center">
            <h1>Register to ShortWeb</h1>
        </div>
        <div class="d-flex justify-content-center row">
            <div class="text-center w-50">
                <div asp-validation-summary="All" class="text-danger fs-5"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @*Will be removed in next iterations*@
            <div class="col-6 offset-3 pb-2">
                <select asp-for="Role" class="form-select" asp-items="ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn btn-primary" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}