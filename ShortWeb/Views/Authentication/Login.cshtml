@model LoginRequestDto

<form method="post">
    <div class="container border border-3 p-4 mt-4">
        <div class="row text-center">
            <h1>Login to ShortWeb</h1>
        </div>
        <div class="d-flex justify-content-center row">
            <div class="text-center w-50">
                <div asp-validation-summary="All" class="text-danger fs-5"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" class="form-control" placeholder="Username..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn btn-primary" value="Submit">Submit</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}